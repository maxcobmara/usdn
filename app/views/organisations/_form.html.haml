.row
  = form_for(@organisation, html: {class: 'form-horizontal'}) do |f|
    - if @organisation.errors.any?
      .error_explanation
        %h2
          = pluralize(@organisation.errors.count, "error")
          prohibited this organisation from being saved:
      %ul
        - @organisation.errors.full_messages.each do |message|
          %li= message

    .col-md-offset-2
      .form-group
        .col-sm-2.control-label
          = f.label :name, for: :name
        .col-md-3
          = f.text_field :name, class: 'form-control mandatory',  readonly: true

      .form-group
        .col-sm-2.control-label
          = f.label :shortname, for: :shortname
        .col-md-3
          = f.text_field :shortname, class: 'form-control mandatory'

      .form-group
        .col-sm-2.control-label
          = f.label :description, for: :description
        .col-md-3
          = f.text_area :description, class: 'form-control mandatory', rows: "3"

      .form-group{style: "z-index:0;"}
        .col-sm-2.control-label
          = f.label :domain_type_id, for: :domain_type_id
        .col-md-4
          = f.select :domain_type_id, DropDown::SITE_TYPE, {prompt: "Select"}, {class: 'selectpicker'}

      .form-group
        .col-sm-offset-2.col-md-2.actions
          = f.submit 'Update', class: "btn btn-primary"
          = link_to 'Back', root_path, style: "margin-left:20px;"
